{
  "mongodb": {
    "uri": "mongodb://localhost:27017/school_erp",
    "options": {
      "useNewUrlParser": true,
      "useUnifiedTopology": true
    }
  },
  "jwt": {
    "secret": "your_jwt_secret_key_here",
    "expiresIn": "30d"
  },
  "server": {
    "port": 5000,
    "cors": {
      "origin": "http://localhost:3000",
      "credentials": true
    }
  },
  "security": {
    "bcryptRounds": 12,
    "rateLimitWindowMs": 900000,
    "rateLimitMax": 100
  }
}
